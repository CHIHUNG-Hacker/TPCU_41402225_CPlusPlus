#include <iostream>
using namespace std;

int main(){
    int sel;
    int total = 0;
    cout << "請點餐" << endl;
    do {
        cout << "1號餐: 熱狗" << endl;
        cout << "2號餐: 雞腿" << endl;
        cout << "3號餐: 雞排" << endl;
        cout << "請選擇餐點" << endl;
        cin >> sel;
        switch (sel) {
            case 1:
                cout << "您點了熱狗:" << "應付30元\n" << endl;
                total += 30;
                break;
            case 2:
                cout << "您點了雞腿:" << "應付40元\n" << endl;
                total += 40;
                break;
            case 3:
                cout << "您點了雞排:" << "應付50元\n" << endl;
                total += 50;
                break;
            case 0:
                cout << "總計NT$" << total << "元" << endl;
                cout << "謝謝光臨，歡迎您再次光臨" << endl;
                break;
            default:
                cout << "輸入時發生錯誤，沒有這個選項，請重新輸入" << endl;
        }
    } 
    while (sel != 0);
    return 0;
    
}
